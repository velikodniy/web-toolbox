{
  "nodeModulesDir": "auto",
  "compilerOptions": {
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "lib": ["dom", "dom.iterable", "es6", "esnext"],
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "strict": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "exactOptionalPropertyTypes": true
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "singleQuote": true,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "imports": {
    "@rsbuild/plugin-react": "npm:@rsbuild/plugin-react@^1.4.1",
    "react": "npm:react@^19.1.1",
    "react-dom": "npm:react-dom@^19.1.1",
    "react-dom/client": "npm:react-dom@^19.1.1/client",
    "@types/react": "npm:@types/react@^19.1.13",
    "@types/react-dom": "npm:@types/react-dom@^19.1.9",
    "react-router-dom": "npm:react-router-dom@^7.9.2",
    "react-hot-toast": "npm:react-hot-toast@^2.4.1",
    "react-icons": "npm:react-icons@^5.4.0"
  },
  "tasks": {
    "dev": "deno run -A npm:@rsbuild/core@1.5.12/rsbuild dev --open",
    "build": "deno run -A npm:@rsbuild/core@1.5.12/rsbuild build",
    "preview": "deno run -A npm:@rsbuild/core@1.5.12/rsbuild preview",
    "check": "deno fmt --check && deno lint",
    "format": "deno fmt",
    "test": "deno test --no-check --allow-env --allow-read --allow-net"
  },
  "deploy": {
    "org": "vlcdn",
    "app": "toolbox"
  }
}
